@using ProjectTracker.Core.ViewModels.Employee
@model IEnumerable<EmployeeViewModel>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Department</th>
                    <th>Assigned Projects</th>
                    <th>Assigned Tickets</th>
                    <th>Edit</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Username</td>
                        <td>@employee.FullName</td>
                        <td>@employee.Department</td>
                        <td>@employee.AssignedProjects</td>
                        <td>@employee.AssignedTickets</td>
                        <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" asp-area="" class="btn btn-info">View Details</a></td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!Model.Any())
        {
            <h3 class="text-center">No records</h3>
        }
    </div>
</div>