@using ProjectTracker.Core.ViewModels.Department
@model IEnumerable<DepartmentViewModel>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Employees</th>
                    <th>Projects</th>
                    <th>Tickets</th>
                    <th>Edit</th>
                </tr>
            </thead>
            
            <tbody>

                @foreach (var department in Model)
                {
                    <tr>
                        <td>@department.Name</td>
                        <td>@department.Employees</td>
                        <td>@department.Projects</td>
                        <td>@department.Tickets</td>
                        <td><a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning">Edit</a></td>
                    </tr>
                }
            </tbody>

        </table>
        @if (!Model.Any())
        {
            <h3 class="text-center">No records</h3>
        }
    </div>
</div>