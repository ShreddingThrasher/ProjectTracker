@using ProjectTracker.Core.ViewModels.Ticket
@model IEnumerable<AdminTicketViewModel>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Project</th>
                    <th>Department</th>
                    <th>Submitter</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Submit Time</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.Title</td>
                        <td>@ticket.Project</td>
                        <td>@ticket.Department</td>
                        <td>@ticket.Submitter</td>
                        <td @(ticket.Status == "Done" ? "class=text-success" : "")>@ticket.Status</td>
                        <td>@ticket.Priority</td>
                        <td>@ticket.Date.ToString("dd MMMM yyyy, HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>