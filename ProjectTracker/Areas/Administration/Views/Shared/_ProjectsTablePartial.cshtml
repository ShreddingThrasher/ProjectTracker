@using ProjectTracker.Core.ViewModels.Project
@model IEnumerable<ProjectViewModel>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Assigned Employees</th>
                    <th>Tickets</th>
                    <th>Edit</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td>@project.Department</td>
                        <td>@project.AssignedEmployeesCount</td>
                        <td>@project.TicketsCount</td>
                        <td><a asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>