@using ProjectTracker.Core.ViewModels.Admin
@model AssignProjectsViewModel

<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Assign Employee to Project</h1>
                            </div>
                            <form class="user" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label>Employee</label>
                                    <span asp-validation-for="@Model.EmployeeId"></span>
                                    <select asp-for="@Model.EmployeeId" class="form-select" aria-label="Default select example">

                                        <option>Select Employee</option>

                                        @foreach (var employee in Model.Employees)
                                        {
                                            <option value="@employee.Id">@employee.UserName</option>
                                        }

                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>Project</label>
                                    <span asp-validation-for="@Model.ProjectId"></span>
                                    <select asp-for="@Model.ProjectId" class="form-select" aria-label="Default select example">

                                        <option>Select Project</option>

                                        @foreach (var project in Model.Projects)
                                        {
                                            <option value="@project.Id">@project.Name</option>
                                        }

                                    </select>
                                </div>
                                <hr>
                                <button type="submit" class="w-100 btn btn-lg btn-primary">Assign</button>
                                <hr>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <partial name="_ValidationScriptsPartial" />

</div>