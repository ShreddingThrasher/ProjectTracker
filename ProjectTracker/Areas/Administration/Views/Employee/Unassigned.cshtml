@using ProjectTracker.Core.ViewModels.Employee
@model IEnumerable<EmployeeViewModel>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Employees</h6>
    </div>
    <!-- Card Body -->

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Full Name</th>
                        <th>Department</th>
                        <th>Assigned Projects</th>
                        <th>Assigned Tickets</th>
                        <th>Assign</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.FullName</td>
                            <td>@employee.Department</td>
                            <td>@employee.AssignedProjects</td>
                            <td>@employee.AssignedTickets</td>
                            <td><a asp-controller="Admin" asp-action="AssignDepartments" class="btn btn-primary">Assign to a Department</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>