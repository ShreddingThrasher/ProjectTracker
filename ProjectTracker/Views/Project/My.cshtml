@using ProjectTracker.Core.ViewModels.Project
@model IEnumerable<ProjectViewModel>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">My Projects</h6>
    </div>
    <!-- Card Body -->

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Assigned Employees</th>
                        <th>Tickets</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var project in Model)
                    {
                        <tr>
                            <td><a asp-controller="Project" asp-action="Details" asp-route-id="@project.Id"> @project.Name</a></td>
                            <td>@project.Department</td>
                            <td>@project.AssignedEmployeesCount</td>
                            <td>@project.TicketsCount</td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <h3 class="text-center">Currently not assigned to any projects.</h3>
            }
        </div>
    </div>

</div>