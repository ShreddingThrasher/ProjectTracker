@using ProjectTracker.Core.ViewModels.Employee
@{
	ViewData["Title"] = "Employees";
}

@model IEnumerable<EmployeeViewModel>



<!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Employees</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Full Name</th>
                                            <th>Department</th>
                                            <th>Assigned Projects</th>
                                            <th>Assigned Tickets</th>
                                            <th>Email</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        
                                        @foreach(var employee in Model)
                                        {
                                            <tr>
                                                <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">@employee.FullName</a></td>
                                                <td>@employee.Department</td>
                                                <td>@employee.AssignedProjects</td>
                                                <td>@employee.AssignedTickets</td>
                                                <td>@employee.Email</td>
                                            </tr>
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>