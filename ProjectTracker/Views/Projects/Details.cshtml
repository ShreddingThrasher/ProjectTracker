@using ProjectTracker.Core.ViewModels.Project
@model ProjectDetailsViewModel

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@Model.Name</h1>
</div>


<!-- Content Row -->
<div class="row">


</div>

<!-- Content Row -->

<div class="row">

   @await Html.PartialAsync("_ProjectDetailsPartial", Model);
    
</div>

<div class="row">


    @await Html.PartialAsync("_ProjectEmployeesPartial", Model.Employees);

</div>

<!-- Content Row -->
<div class="row">

    <div class="col-lg-6 mb-4">

        @await Html.PartialAsync("_ProjectTicketsPartial", Model.Tickets)

        <a asp-controller="Projects" asp-action="SubmitTicket" asp-route-id="@Model.Id" class="btn btn-info btn-icon-split">
            <span class="text">Submit Ticket</span>
        </a>

    </div>

    <div class="col-lg-6 mb-4">

        <!-- Pie Chart -->
        <div class="col-xl-12 col-lg-5">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Tickets Status</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="myPieChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle text-primary"></i> Open
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-success"></i> In Progress
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-info"></i> Done
                        </span>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>