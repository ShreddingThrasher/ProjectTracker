@using ProjectTracker.Core.ViewModels.Project
@model IEnumerable<ProjectViewModel>

@{
    ViewData["Title"] = "Current Projects";
}

<h1>@ViewData["Title"]</h1>

<div class="col">

    @foreach (var project in Model)
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id">@project.Name</a>
                </h6>
            </div>
            <div class="card-body">
                <p>Description: @project.Description</p>
                <p>Department: @project.Department</p>
                <p>Assigned Employees: @project.AssignedEmployeesCount</p>
                <p>Tickets: @project.TicketsCount</p>

