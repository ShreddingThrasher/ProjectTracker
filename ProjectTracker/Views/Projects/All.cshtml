                {
                    <a asp-controller="Departments" asp-action="Manage" asp-route-id="@department.Id" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-flag"></i>
                        </span>
                        <span class="text">Manage</span>
                    </a>
                }*@
            </div>
        </div>
    }

</div>

