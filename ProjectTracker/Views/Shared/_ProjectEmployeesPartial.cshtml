@using ProjectTracker.Core.ViewModels.Employee
@model IEnumerable<EmployeeViewModel>


<div class="col-xl-12 col-lg-7">
    <div class="card shadow mb-4">

        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Assigned Employees</h6>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@employee.FullName</a></td>
                                <td>@employee.Email</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>