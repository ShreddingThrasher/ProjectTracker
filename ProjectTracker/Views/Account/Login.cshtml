@using ProjectTracker.Core.ViewModels.Account
@{
    ViewData["Title"] = "Login";
}

@model LoginViewModel

<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Project_Tracker</h1>
                            </div>
                            <form class="user" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="@Model.Email"></label><br />
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    <input asp-for="@Model.Email" class="form-control" autocomplete="UserName" aria-required="true" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.Password"></label><br />
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    <input asp-for="@Model.Password" class="form-control" aria-required="true" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.RememberMe"></label>
                                    <input asp-for="@Model.RememberMe" type="checkbox">
                                </div>
                                <button id="loginSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
                                <hr>
                                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-block">
                                    Register
                                </a>
                                <a asp-controller="Account" asp-action="Guest" class="btn btn-success btn-block">
                                    Try as Guest
                                </a>
                            </form>
                            <hr>
                            <p class="text-center">Project created by Boyko Nikolaev</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>